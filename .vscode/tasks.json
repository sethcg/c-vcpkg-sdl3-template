{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "-j" ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Configure"
        },
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-DCMAKE_BUILD_TYPE=Debug", "-S.", "-Bbuild" ]
        }
    ]
}